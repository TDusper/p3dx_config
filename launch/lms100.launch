<launch>
  <arg name="robot_name" default="$(env ROBOT_NAME)"/>

  <group ns="$(arg robot_name)">

    <!-- Launch the LMS1xx driver. -->
    <include file="$(find lms1xx)/launch/LMS1xx.launch">
      <arg name="host" value="192.168.0.1"/>
    </include>
    
    <!-- Run the transform that defines the position of the laser -->
    <node pkg="tf" type="static_transform_publisher" name="laser_tf" args="0.14 0 0.3 0 0 0 base_link laser 50"/>
  </group>

</launch>
